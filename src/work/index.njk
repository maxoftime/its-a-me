title: Work
layout: layouts/base.njk
---

<h1>{{ title }}</h1>

<section>
    <ol class="cv-list work-list">
    {% for item in jobs %}
        <li>
            <h3>{{ item.client }}</h3>
            <h4>{{ item.role }}</h4>
            <p>{{ item.description }}</p>
            <ul class="tags">
             {% for tech in item.stack %}
                <li>{{ tech }}</li>
            {% endfor %}
            </ul>
        </li>
    {% endfor %}
    </ol>
</section>
