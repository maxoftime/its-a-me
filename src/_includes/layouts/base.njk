<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ '/assets/styles/global.css' | url }}">
    <title>{{ title }}</title>
    <meta name="description" content="I am Max Bergström. A web developer and web enthusiast. This is my space online, welcome.">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.png">
    <meta property="og:image" content="https://maxbergstrom.se/assets/img/og.png">
    <meta property=”og:title” content=”{{ title }}”/>
    <meta property=”og:description” content=”I am Max Bergström. A web developer and web enthusiast. This is my space online, welcome.”/>
    <meta property=”og:image:width” content=”1200″/>
    <meta property=”og:image:height” content=”630″/>

  </head>
  <body class="{{ currentpage }}">
    {% include 'components/aside.njk' %}
    <main>
      {{ content | safe }}
    </main>

  <style>
    @keyframes blink {
      0% {
        opacity: 0;
      }
      25% {
        opacity: 1;
      }
      50% {
        opacity: 1;
      }
      75% {
        opacity: 1;
      }
      100% {
        opacity: 0;
      }
    }

    @keyframes show-menu {
      0% {
        transform: translateX(0);
        opacity: 0;
      }
      100% {
        opacity: 1;
        transform: translateX(0);
      }

    }

    @keyframes hide-menu {
      0% {
        transform: translateX(0);
        opacity: 1;
      }
      99% {
        opacity: 0;
        transform: translateX(0);
      }
      100% {
        opacity: 0;
        transform: translateX(100%);
      }

    }

    @keyframes pixelate {
      0% {
        filter: url('#pixelate-0');
      }
      12.5% {
        filter: url('#pixelate-1');
      }
      25% {
        filter: url('#pixelate-2');
      }
      37.5% {
        filter: url('#pixelate-3');
      }
      50% {
        filter: url('#pixelate-4');
      }
      62.5% {
        filter: url('#pixelate-5');
      }
      78% {
        filter: url('#pixelate-6');
      }
      100% {
        filter: url('#pixelate-7');
      }
    }

    @keyframes depixelate {
      0% {
        filter: url('#pixelate-7');
      }
      12.5% {
        filter: url('#pixelate-6');
      }
      25% {
        filter: url('#pixelate-5');
      }
      37.5% {
        filter: url('#pixelate-4');
      }
      50% {
        filter: url('#pixelate-3');
      }
      62.5% {
        filter: url('#pixelate-2');
      }
      78% {
        filter: url('#pixelate-1');
      }
      100% {
        filter: unset;
      }
    }


    @keyframes glitch {
      0% {
        filter: url('#pixelate-0');
      }
      12.5% {
        filter: url('#pixelate-1');
      }
      25% {
        filter: url('#pixelate-3');
      }
      37.5% {
        filter: url('#pixelate-7');
      }
      50% {
        filter: url('#pixelate-4');
      }
      62.5% {
        filter: url('#pixelate-5');
      }
      78% {
        filter: url('#pixelate-1');
      }
      100% {
        filter: url('#pixelate-0');
      }
    }


    @keyframes rainbow {
      0% {
        font-variation-settings: "wght" 100, "wdth" 70, "xhgt" 0.7;
        letter-spacing: -3px;
      }
      50% {
        font-variation-settings: "wght" 900, "wdth" 200, "xhgt" 1.4;
        letter-spacing: 1px;
      }
      100% {
        font-variation-settings: "wght" 100, "wdth" 70, "xhgt" 0.7;
        letter-spacing: -3px;
      }
    }
  </style>
  </body>

</html>